
@{
    ViewData["Title"] = "AttachAll_TypeInvoice";
    Layout = "~/Views/Shared/bkancklayout.cshtml";
}
<link href="~/css/AttachInvoice.css" rel="stylesheet" />
<style>
   
</style>
<div>
    <div class="container">
        <div class="form-container">
            <form id="invoiceForm">
                <div class="asset-code-display">
                    <h4 class="mb-1">Asset Code <span id="AssetCodes"></span></h4>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">
                                Asset Type <span class="required">*</span>
                            </label>
                            <select class="form-select" id="InvoiceType" required>
                                <option value="">Select Asset Type</option>
                                <option value="AML">AML</option>
                                <option value="Challan No">Challan No</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">
                                Upload Invoice <span class="required">*</span>
                            </label>
                            <div class="file-upload-container">
                                <button type="button" class="file-upload-btn" id="fileUploadBtn">
                                    <span id="btnText">
                                        <i class="fas fa-cloud-upload-alt fa-2x"></i>
                                        Browse & Select Invoice
                                    </span>
                                </button>
                                <input type="file" class="file-input" id="fileInput" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="image-preview-container" id="imagePreviewContainer">
                            <div class="preview-header d-flex justify-content-between">
                                <h5 class="preview-title">Invoice Preview</h5>
                                <button type="button" class="remove-preview" id="removePreview">
                                    <i class="fas fa-times"></i> Remove
                                </button>
                            </div>
                            <div class="text-center">
                                <img id="imagePreview" class="image-preview" alt="Invoice Preview">
                            </div>
                            <div class="file-details" id="fileDetails"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="submit-btn" id="submitBtn">
                            <i class="fas fa-paper-plane me-2"></i>
                            Submit Invoice
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        const $fileInput = $('#fileInput');
        const $fileUploadBtn = $('#fileUploadBtn');
        const $btnText = $('#btnText');
        const $submitBtn = $('#submitBtn');
        const $invoiceForm = $('#invoiceForm');
        const $imagePreviewContainer = $('#imagePreviewContainer');
        const $imagePreview = $('#imagePreview');
        const $fileDetails = $('#fileDetails');
        const $removePreview = $('#removePreview');
        let urlParams = new URLSearchParams(window.location.search);
        let AssetCode = urlParams.get('AssetCode');
        $('#AssetCodes').text(`(${AssetCode})`)
        $fileUploadBtn.on('click', function() {
            $fileInput.trigger('click');
        });
       
        $fileInput.on('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                handleFileUpload(file);
            } else {
                clearPreview();
            }
        });

        function handleFileUpload(file) {
            $fileUploadBtn.addClass('file-selected');
            $btnText.html('<i class="fas fa-check-circle me-2"></i>File Selected: ' + file.name);
            const fileSize = (file.size / 1024 / 1024).toFixed(2); 
            const fileType = file.type || 'Unknown';
            $fileDetails.html(`
                <strong>File Name:</strong> ${file.name}<br>
                <strong>File Size:</strong> ${fileSize} MB<br>
                <strong>File Type:</strong> ${fileType}<br>
                <strong>Last Modified:</strong> ${new Date(file.lastModified).toLocaleString()}
            `);
            if (file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    $imagePreview.attr('src', e.target.result);
                    $imagePreviewContainer.show();
                };
                reader.readAsDataURL(file);
            } else {
                let iconClass = 'fa-file';
                if (file.type.includes('pdf')) {
                    iconClass = 'fa-file-pdf';
                } else if (file.type.includes('word') || file.name.endsWith('.doc') || file.name.endsWith('.docx')) {
                    iconClass = 'fa-file-word';
                }
                $imagePreview.replaceWith(`
                    <div class="file-icon-preview text-center" style="padding: 40px;">
                        <i class="fas ${iconClass} fa-5x" style="color: #007bff;"></i>
                        <h5 class="mt-3">${file.name}</h5>
                        <p class="text-muted">File uploaded successfully</p>
                    </div>
                `);
                $imagePreviewContainer.show();
            }
        }
        $removePreview.on('click', function() {
            clearPreview();
            $fileInput.val('');
        });
        function clearPreview() {
            $fileUploadBtn.removeClass('file-selected');
            $btnText.html('<i class="fas fa-cloud-upload-alt"></i> Browse & Select Invoice');
            $imagePreviewContainer.hide();
            $fileDetails.html('');
            if (!$('#imagePreview').length) {
                $('.file-icon-preview').replaceWith('<img id="imagePreview" class="image-preview" alt="Invoice Preview">');
            }
        }
        $invoiceForm.on('submit', function(e) {
            debugger
            e.preventDefault();
            const InvoiceType = $('#InvoiceType').val();
            const file = $fileInput[0].files[0];
            if (!$('#InvoiceType').val()) {
                fireSweetAlert('Please select an Invoice Type','error');
                return;
            }
            if (!file) {
                alert('Please Upload Invoice')
                return;
            }
            const formData = new FormData();
            formData.append('AssetCode', AssetCode);
            formData.append('InvoiceType', InvoiceType);
            formData.append('ImageFile', file);
            $submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Uploading...');
            $submitBtn.prop('disabled', true);

            $.ajax({
                url: '/Dashboard/SaveAllAttachedInvoice',
                type: 'POST',
                data:formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        $submitBtn.html('<i class="fas fa-check me-2"></i>Upload Complete!');
                        fireSweetAlert('Invoice uploaded successfully!','success');

                        setTimeout(function() {
                            clearPreview();
                            $('#assetType').val('');
                            $fileInput.val('');
                            $submitBtn.html('<i class="fas fa-paper-plane me-2"></i>Submit Invoice');
                            $submitBtn.prop('disabled', false);
                        }, 2000);
                    } else {
                        throw new Error(response.message || 'Upload failed');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Upload error:', xhr.responseText);
                    let errorMessage = 'Upload failed. Please try again.';

                    try {
                        const response = JSON.parse(xhr.responseText);
                        errorMessage = response.message || errorMessage;
                    } catch (e) {
                    }

                    alert(errorMessage);
                    $submitBtn.html('<i class="fas fa-paper-plane me-2"></i>Submit Invoice');
                    $submitBtn.prop('disabled', false);
                }
            });
        });
    });
</script>