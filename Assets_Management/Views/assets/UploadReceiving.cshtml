@{
    ViewData["Title"] = "UploadReceiving";
    Layout = "~/Views/Shared/Blank_Layout.cshtml";
}

<style>
    .preview-container {
        border: 2px dashed #dee2e6;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        background: #f8f9fa;
        min-height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .preview-container.has-image {
        border-style: solid;
        border-color: #0d6efd;
        background: white;
    }

    .preview-image {
        max-width: 100%;
        max-height: 400px;
        border-radius: 4px;
    }

    .uploaded-card:hover .delete-btn {
        opacity: 1;
    }

    .delete-btn {
        opacity: 0;
        transition: opacity 0.2s;
    }

    .image-wrapper {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;  
    }

    .download-btn {
        position: absolute;
        top: 8px;
        right: 8px;
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
        padding: 6px 8px;
        border-radius: 50%;
        text-decoration: none;
        font-size: 14px;
    }

    .download-btn:hover {
        background: rgba(0, 0, 0, 0.8);
    }

</style>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Upload Receiving</h5>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="categoryDropdown" class="form-label fw-semibold">Category</label>
                        <select class="form-select" id="ddlCategory" required>

                            <option selected disabled value="" >-- Select Category --</option>
                            <option value="Receiving">Receiving</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <button type="button" class="btn btn-outline-secondary w-100" onclick="$('#fileInput').click()">
                            <i class="bi bi-folder2-open me-2"></i>Choose Image
                        </button>
                        <input type="file" id="fileInput" class="d-none" accept="image/*">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-success" id="saveBtn">
                            <i class="bi bi-cloud-upload me-2"></i>Upload Image
                        </button>
                        <button type="button" class="btn btn-outline-danger" id="clearBtn">
                            <i class="bi bi-x-circle me-2"></i>Clear
                        </button>
                    </div>
                </div>

                <div class="col-md-8">
                    <label class="form-label fw-semibold">Preview</label>
                    <div class="preview-container" id="previewContainer">
                        <div class="text-muted" id="emptyPreview">
                            <i class="bi bi-image display-1 d-block mb-3"></i>
                            <p class="mb-0">No image selected</p>
                            <small>Choose an image to see preview</small>
                        </div>
                        <div class="d-none" id="imagePreviewWrapper">
                            <img id="imagePreview" class="preview-image" alt="Preview">
                            <div class="mt-2">
                                <small class="text-muted" id="fileName"></small>
                            </div>
                        </div>         
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div id="uploadedImagesGrid" class="card-body">
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-images display-4 d-block mb-3 opacity-25"></i>
                        <p class="mb-0">No images uploaded yet</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var params = new URLSearchParams(window.location.search);
    let AssetCode = params.get("AssetCode")
    let selectedFile = null;
    $(document).ready(function() { 
        loadUploadedImages(); 
    });

    $('#fileInput').on('change', function(e) {
        const file = e.target.files[0];

        if (file) {
            selectedFile = file;
            const reader = new FileReader();

            reader.onload = function(e) {
                $('#imagePreview').attr('src', e.target.result);
                $('#fileName').text(file.name);
                $('#emptyPreview').addClass('d-none');
                $('#imagePreviewWrapper').removeClass('d-none');
                $('#previewContainer').addClass('has-image');
                $('#saveBtn, #clearBtn').prop('disabled', false);
            };

            reader.readAsDataURL(file);
        }
    });

    $('#clearBtn').on('click', function() {
        clearPreview();
    });

    $('#saveBtn').on('click', function() {
        let Category = $('#ddlCategory').val()
        if (!AssetCode) {
            Swal.fire({
               text: `Without asset code can't save`,
               icon: "error"
            });
            return
        }
        if (!Category) {
            Swal.fire({
               text: `Please Sselect Category`,
               icon: "error"
            });
            return
        }

        if(!selectedFile)
        {
            Swal.fire({
               text: `Please Upload File`,
               icon: "error"
            });
            return
        }

        const formData = new FormData();
        formData.append('AssetCode', AssetCode);
        formData.append('Category', Category);
        formData.append('Images', selectedFile);

        $('#saveBtn').prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Uploading...');

        $.ajax({
            url: '/assets/UploadReceiving',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                Swal.fire({
                   text: `${response.message}`,
                   icon: "success"
                })
                clearPreview();
                loadUploadedImages();
            },
            error: function(xhr, status, error) {
                alert('Error uploading image: ' + error);
                $('#saveBtn').prop('disabled', false).html('<i class="bi bi-cloud-upload me-2"></i>Upload Image');
            }
        });
    });

    function clearPreview() {
        selectedFile = null;
        $('#fileInput').val('');
        $('#imagePreview').attr('src', '');
        $('#fileName').text('');
        $('#emptyPreview').removeClass('d-none');
        $('#imagePreviewWrapper').addClass('d-none');
        $('#previewContainer').removeClass('has-image');
        $('#saveBtn, #clearBtn').prop('disabled', true);
        $('#saveBtn').html('<i class="bi bi-cloud-upload me-2"></i>Upload Image');
    }

    function loadUploadedImages() {
        let Category = $('#ddlCategory').val()
        $.ajax({
            url: `/assets/GetUploadedReceivingImage?AssetCode=${AssetCode}&Category=${Category}`,
            type: 'GET',
            success: function (res) {
                $('#uploadedImagesGrid').empty();

                if (res.success && res.data.length > 0) {

                    const row = $('<div class="row"></div>');

                    $.each(res.data, function (i, v) {

                         const imageCard = `
                             <div class="col-md-3 col-sm-6 mb-3">
                                 <div class="card h-100 uploaded-card">

                                     <div class="image-wrapper">
                                         <!-- Open image in new tab -->
                                         <a href="${v.imageUrl}" target="_blank">
                                             <img src="${v.imageUrl}" alt="${v.imageName}">
                                         </a>

                                         <a href="${v.imageUrl}"
                                            download="${v.imageName}"
                                            class="download-btn"
                                            title="Download image">
                                            <i class="fa-solid fa-download"></i>
                                         </a>
                                     </div>

                                     <div class="card-body">
                                         <p class="card-text mb-1">
                                             <small class="text-muted">
                                                 <i class="bi bi-folder me-1"></i>${v.category}
                                             </small>
                                         </p>
                                         <p class="card-text">
                                             <small class="text-muted">
                                                 <i class="bi bi-calendar me-1"></i>
                                                 ${new Date(v.uploadDate).toLocaleDateString()}
                                             </small>
                                         </p>
                                     </div>

                                 </div>
                             </div>
                         `;

                        row.append(imageCard);
                    });

                    $('#uploadedImagesGrid').append(row);

                } else {
                    $('#uploadedImagesGrid').html(`
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-images display-4 d-block mb-3 opacity-25"></i>
                            <p class="mb-0">No images uploaded yet</p>
                        </div>
                    `);
                }
            },
            error: function (xhr, status, error) {
                console.error('Error loading images:', error);
            }
        });
    }


    window.deleteImage = function(imageId) {
        if (confirm('Are you sure you want to delete this image?')) {
            $.ajax({
                url: '/UploadReceiving/DeleteImage/' + imageId,
                type: 'DELETE',
                success: function(response) {
                    loadUploadedImages();
                },
                error: function(xhr, status, error) {
                    alert('Error deleting image: ' + error);
                }
            });
        }
    };

    $('#ddlCategory').on('change', function(){
        loadUploadedImages()
    })

</script>